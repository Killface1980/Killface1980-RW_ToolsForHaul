<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <!-- Added body parts -->

  <HediffDef Name="AddedVehiclePartBase" Abstract="True">
    <hediffClass>Hediff_AddedPart</hediffClass>
    <defaultLabelColor>(0.5, 0.5, 0.9)</defaultLabelColor>
    <isBad>false</isBad>
  </HediffDef>

  <HediffDef ParentName="AddedVehiclePartBase">
    <defName>Bomb</defName>
    <label>bomb</label>
    <addedPartProps>
      <isSolid>true</isSolid>
      <partEfficiency>1.5</partEfficiency>
    </addedPartProps>
  </HediffDef>

  <HediffDef ParentName="AddedVehiclePartBase">
    <defName>BionicArm</defName>
    <label>bionic arm</label>
    <comps>
      <li Class="HediffCompProperties_VerbGiver">
        <verbs>
          <li>
            <verbClass>Verb_MeleeAttack</verbClass>
            <defaultCooldownTime>1.65</defaultCooldownTime>
            <meleeDamageBaseAmount>9</meleeDamageBaseAmount>
            <meleeDamageDef>Blunt</meleeDamageDef>
          </li>
        </verbs>  
      </li>
    </comps>
    <spawnThingOnRemoved>BionicArm</spawnThingOnRemoved>
    <addedPartProps>
      <isBionic>true</isBionic>
      <isSolid>true</isSolid>
      <partEfficiency>1.4</partEfficiency>
    </addedPartProps>
  </HediffDef>

</Defs>