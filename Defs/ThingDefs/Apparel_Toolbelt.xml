<?xml version="1.0" encoding="utf-8" ?>
<ThingDefs>

	<!-- 
	- defaultOutfitTags - used to determine gear in preset outfit sets available in the outfits menu
	- equippedStatOffsets - applies offset to the pawns stat when worn
	- worngraphicPath - used to fraw apparel texture on the pawn. shows nothing if not set
	 -->


  <ThingDef Name="ToolsForHaulApparelBase" Abstract="True">
    <category>Item</category>
    <selectable>True</selectable>
    <pathCost>10</pathCost>
    <useHitPoints>True</useHitPoints>
    <graphicData>
      <onGroundRandomRotateAngle>35</onGroundRandomRotateAngle>
    </graphicData>
    <drawGUIOverlay>true</drawGUIOverlay>
    <statBases>
      <MaxHitPoints>100</MaxHitPoints>
      <Flammability>1.0</Flammability>
      <DeteriorationRate>1</DeteriorationRate>
      <SellPriceFactor>0.5</SellPriceFactor>
    </statBases>
    <altitudeLayer>Item</altitudeLayer>
    <alwaysHaulable>True</alwaysHaulable>
    <tickerType>Never</tickerType>
    <comps>
      <li Class="CompProperties_Forbiddable"/>
      <li>
        <compClass>CompColorable</compClass>
      </li>
      <li>
        <compClass>CompQuality</compClass>
      </li>
    </comps>
  </ThingDef>

  <ThingDef Name="ToolsForHaulApparelMakeableBase" ParentName="ToolsForHaulApparelBase" Abstract="True">
    <recipeMaker>
      <workSpeedStat>TailoringSpeed</workSpeedStat>
      <workSkill>Crafting</workSkill>
      <effectWorking>Tailor</effectWorking>
      <soundWorking>Recipe_Tailor</soundWorking>
      <recipeUsers>
        <li>ElectricTailoringBench</li>
        <li>HandTailoringBench</li>
      </recipeUsers>
      <unfinishedThingDef>UnfinishedApparel</unfinishedThingDef>
    </recipeMaker>
  </ThingDef>


  <ThingDef Name="ToolsForHaulToolbeltBase" ParentName="ToolsForHaulApparelMakeableBase" Abstract="True">
    <thingClass>ToolsForHaul.Apparel_Toolbelt</thingClass>
    <thingCategories>
      <li>Apparel</li>
    </thingCategories>
  </ThingDef>

  
  
  <ThingDef ParentName="ToolsForHaulToolbeltBase">
    <defName>RTFTJ_Toolbelt</defName>
    <label>toolbelt</label>
    <description>A toolbelt to keep your tools to yourself.</description>
		<graphicData>
			<texPath>Things/Items/Apparels/Various/Toolbelt/Toolbelt</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <statBases>
      <WorkToMake>8000</WorkToMake>
      <ArmorRating_Blunt>0.03</ArmorRating_Blunt>
      <ArmorRating_Sharp>0.03</ArmorRating_Sharp>
      <ArmorRating_Heat>0.03</ArmorRating_Heat>
      <TFHMaxItem>2</TFHMaxItem>
      <MarketValue>150</MarketValue>
    </statBases>  
    <tickerType>Normal</tickerType>
    <stuffCategories>
      <li>Leathery</li>
      <li>Fabric</li>
    </stuffCategories>	<apparel>
			<bodyPartGroups>
				<li>Shoulders</li>
			</bodyPartGroups>
			<worngraphicPath>Things/Items/Apparels/Various/Toolbelt/Toolbelt</worngraphicPath>
			<layers>
				<li>Middle</li>
			</layers>
			<commonality>1</commonality>
      <tags>
        <li>Toolbelt</li>
      </tags>
    </apparel>
		<colorGenerator Class="ColorGenerator_Options">
			<options>
				<li>
					<weight>10</weight>
					<only>RGBA(0.4,0.3,0.15,1)</only>
				</li>
				<li>
					<weight>15</weight>
					<only>RGBA(0.6,0.45,0.18,1)</only>
				</li>
				<li>
					<weight>20</weight>
					<only>RGBA(0.8,0.6,0.23,1)</only>
				</li>
			</options>
		</colorGenerator>
		<comps>
			<li Class="ToolsForHaul.CompSlotsToolbelt_Properties">
				<allowedThingCategoryDefs>
					<li>WeaponsMelee</li>
				</allowedThingCategoryDefs>
			</li>
		</comps>
    <equippedStatOffsets>
      <WorkSpeedGlobal>0.3</WorkSpeedGlobal>
    </equippedStatOffsets>
	</ThingDef>

  <ThingDef ParentName="ToolsForHaulToolbeltBase">
    <defName>RTFTJ_ToolbeltAdv</defName>
    <label>advanced toolbelt</label>
    <description>An advanced toolbelt to keep your tools to yourself.</description>
    <graphicData>
      <texPath>Things/Items/Apparels/Various/Toolbelt/ADVToolbelt</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <statBases>
      <WorkToMake>14000</WorkToMake>
      <ArmorRating_Blunt>0.03</ArmorRating_Blunt>
      <ArmorRating_Sharp>0.03</ArmorRating_Sharp>
      <ArmorRating_Heat>0.03</ArmorRating_Heat>
      <TFHMaxItem>4</TFHMaxItem>
      <MarketValue>500</MarketValue>
    </statBases>
    <tickerType>Normal</tickerType>
    <stuffCategories>
      <li>Leathery</li>
      <li>Fabric</li>
    </stuffCategories>
    <apparel>
      <bodyPartGroups>
        <li>Shoulders</li>
      </bodyPartGroups>
      <worngraphicPath>Things/Items/Apparels/Various/Toolbelt/ADVToolbelt</worngraphicPath>
      <layers>
        <li>Middle</li>
      </layers>
      <commonality>1</commonality>
      <tags>
        <li>Toolbelt</li>
      </tags>
    </apparel>
    <colorGenerator Class="ColorGenerator_Options">
      <options>
        <li>
          <weight>10</weight>
          <only>RGBA(0.4,0.3,0.15,1)</only>
        </li>
        <li>
          <weight>15</weight>
          <only>RGBA(0.6,0.45,0.18,1)</only>
        </li>
        <li>
          <weight>20</weight>
          <only>RGBA(0.8,0.6,0.23,1)</only>
        </li>
      </options>
    </colorGenerator>
    <comps>
      <li Class="ToolsForHaul.CompSlotsToolbelt_Properties">
        <allowedThingCategoryDefs>
          <li>WeaponsMelee</li>
        </allowedThingCategoryDefs>
      </li>
    </comps>
    <equippedStatOffsets>
      <WorkSpeedGlobal>0.3</WorkSpeedGlobal>
    </equippedStatOffsets>
  </ThingDef>
	
</ThingDefs>