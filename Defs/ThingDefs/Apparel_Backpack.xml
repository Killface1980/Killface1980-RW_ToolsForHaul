  <ThingDef Name="ToolsForHaulBackpackBase" ParentName="ApparelMakeableBase" Abstract="True">
    <thingClass>TFH_Tools.Apparel_Backpack</thingClass>
    <thingCategories>
      <li>Backpacks</li>
    </thingCategories>
    <label>backpack</label>
    <description>A backpack is a bag with straps that go over your shoulders, so that you can carry things on your back when you are walking or climbing.</description>
    <graphicData>
      <texPath>Things/Apparel/Backpack/Backpack</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <costStuffCount>50</costStuffCount>
    <stuffCategories>
      <li>Fabric</li>
      <li>Leathery</li>
    </stuffCategories>
    <apparel>
      <bodyPartGroups>
        <li>Shoulders</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Apparel/Backpack/Backpack</wornGraphicPath>
      <layers>
        <li>Belt</li>
      </layers>
      <defaultOutfitTags>
        <li>Worker</li>
      </defaultOutfitTags>
    </apparel>
