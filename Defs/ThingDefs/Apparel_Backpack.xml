  <ThingDef Name="ToolsForHaulBackpackBase" ParentName="ToolsForHaulApparelMakeableBase" Abstract="True">
    <thingClass>ToolsForHaul.Apparel_Backpack</thingClass>
    <thingCategories>
      <li>Apparel</li>
    </thingCategories>
    <tickerType>Normal</tickerType>
    <label>backpack</label>
    <description>A backpack is a bag with straps that go over your shoulders, so that you can carry things on your back when you are walking or climbing.</description>
    <graphicData>
      <texPath>Things/Pawn/Humanlike/Apparel/Backpack/Backpack</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <costStuffCount>50</costStuffCount>
    <stuffCategories>
      <li>Fabric</li>
      <li>Leathery</li>
    </stuffCategories>

    <equippedStatOffsets>
      <MoveSpeed>-0.05</MoveSpeed>
    </equippedStatOffsets>
    <apparel>
      <bodyPartGroups>
        <li>Shoulders</li>
      </bodyPartGroups>
      <worngraphicPath>Things/Pawn/Humanlike/Apparel/Backpack/Backpack</worngraphicPath>
      <layers>
        <li>Accessory</li>
      </layers>
      <commonality>1</commonality>
      <tags>
        <li>Backpack</li>
      </tags>
    </apparel>
    <colorGenerator Class="ColorGenerator_StandardApparel" />
